<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llRestaurantItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80FCBF49"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/itemMainImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/foodimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/tvRestoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="0dp"
                android:text="KFC"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/glacialindifference_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icLocation"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/locationicon"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Ayam Goreng Krispy No. 12, AyamLand"
                    android:textColor="@color/black"
                    android:fontFamily="@font/glacialindifference_regular"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <ImageView
                    android:id="@+id/icMoney"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/moneyicon"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="100k - 150k for two people"
                    android:textColor="@color/black"
                    android:fontFamily="@font/glacialindifference_regular"
                    android:textSize="15dp"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icRating"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ratingicon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacialindifference_regular"
                    android:text="4.5 out of 5"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icRating"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/icHeart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/emptyhearticon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>